          span.label Option1 :
          input(type="text", name="Answer1", id="answer1Question")
        div
          span.label Option2 :
          input(type="text", name="Answer2", id="answer2Question")
        div
          span.label Option3 :
          input(type="text", name="Answer3", id="answer3Question")
        div
          span.label Option4 :
