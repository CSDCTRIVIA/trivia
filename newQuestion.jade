  div.newQuestion
    form( method="post")
      div
        div
          span.label Description :
          input(type="text", name="description", id="DescriptionQuestion")
        div
          span.label Weightage :
          input(type="text", name="weightage", id="WeightageQuestion")
        div
          span.label Category :
          input(type="text", name="Category", id="CategoryQuestion")
        div
